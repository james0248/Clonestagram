<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/round_corner</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="TextBoxStyle">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:background">@drawable/round_corner</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:padding">20dp</item>
    </style>

</resources>